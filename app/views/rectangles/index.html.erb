<h1>Listing rectangles</h1>
 
 <%= link_to 'New rectangle', new_rectangle_path %>

<table>
  <tr>
    <th>Width</th>
    <th>Height</th>
    <th>Color</th>
    
    <th colspan="3"></th>
  </tr>
 
  <% @rectangles.each do |rectangle| %>
    <tr>
      <td><%= rectangle.width %></td>
      <td><%= rectangle.height %></td>
      <td><%= rectangle.color %></td>
      <!-- <div id="rectangle"></div> -->
      <!-- <div id="rectangle" style="width:100 px; height:300 px; background-color:blue"></div> -->
      <td><%= link_to 'Show', rectangle_path(rectangle) %></td>
      <td><%= link_to 'Edit', edit_rectangle_path(rectangle) %></td>
      <td><%= link_to 'Destroy', rectangle_path(rectangle),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    </tr>
    </tr>
  <% end %>
</table>
<br>

<h1>Display rectangles</h1>

<br>
<!-- <canvas id="myCanvas" width="1000" height="1000" style="border:1px solid #c3c3c3;"> -->
<% @rectangles.each do |rectangle| %>
  <div style= "height: <%= rectangle.height %>px; width: <%= rectangle.width %>px; background-color: <%= rectangle.color %>;"></div><br>
<% end %>     

